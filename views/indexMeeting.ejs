<%- include header1 %>
<article class="am-article">
    <div class="am-article-hd">
        <h1 class="am-article-title">大会主题：<%= meeting.Title %></h1>
        <p class="am-article-meta">主办方：<%= meeting.organizer%>会议时间<%= meeting.startTime %>-<%= meeting.endTime %></p>
    </div>

    <div class="am-article-bd">
        <p class="am-article-lead"><%= meeting.intro %></p>

       
        <a class="am-btn am-btn-default" data-am-modal="{target: '#doc-modal-1', closeViaDimmer: 0, width: 300, height: 400}">
            资料下载（双击）
        </a>

        <div class="am-modal am-modal-no-btn" tabindex="-1" id="doc-modal-1">
            <div class="am-modal-dialog">
                <div class="am-modal-hd">会议资料
                    <a href="javascript: void(0)" class="am-close am-close-spin" data-am-modal-close>&times;</a>
                </div>
                <div class="am-modal-bd">
                    <select style="width: 100%;height:280px"  multiple class="" id="doc-select-2">
                    <% if(meeting.material){ %>
                        <% var materials = meeting.material %>
                        <% materials.forEach(function (material, index) { %>
                            <% if (material) { %>
                                <%var name = material.split("/") %>
                                <option><%= name[1]%></option>
                            <% } %>
                        <% }) %>
                    <% } %>
                    </select>
                    <div class="am-article-divider"></div>
                    <button type="button" class="am-btn am-btn-success am-btn-xs">发送邮箱</button>
                    <button type="button" class="am-btn am-btn-success am-btn-xs">下载</button>
                </div>
            </div>
        </div>
        <!--<a href="" download=<%= meeting.material %> >会议资料下载</a>-->
        <!---->
    </div>
     <hr data-am-widget="divider" style="" class="am-divider am-divider-dotted" />
</article>
<%- include footer1 %>